<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.admindesktopapp.controllers.LoginController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="50.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Email: "/>
    <TextField fx:id="emailField"/>

    <Label text="Passsword: "/>
    <PasswordField fx:id="passwordField" />

    <Button text="Login" onAction="#loginAction"/>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />


</VBox>
